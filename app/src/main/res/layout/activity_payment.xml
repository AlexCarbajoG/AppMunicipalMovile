<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.PaymentActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="INGRESA DATOS DE LA TARJETA"
        android:textColor="@color/material_dynamic_neutral10"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/material_dynamic_neutral50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="255dp">

            <EditText
                android:id="@+id/txtfechavencimiento"
                android:layout_width="144dp"
                android:layout_height="53dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/edittext_rounded"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtnrotarjeta"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/txtnrotarjeta"
                android:layout_width="307dp"
                android:layout_height="55dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/edittext_rounded"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/txtcvv"
                android:layout_width="144dp"
                android:layout_height="53dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/edittext_rounded"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtfechavencimiento"
                app:layout_constraintTop_toBottomOf="@+id/txtnrotarjeta"
                tools:ignore="SpeakableTextPresentCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="215dp"
        android:layout_height="74dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:srcCompat="@drawable/pago" />

    <Button
        android:id="@+id/btnpagartarjeta"
        android:layout_width="131dp"
        android:layout_height="47dp"
        android:layout_marginTop="37dp"
        android:backgroundTint="@color/letraazul"
        android:text="@string/tltpagotarjeta"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="131dp"
        android:layout_height="47dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/material_dynamic_neutral20"
        android:text="@string/ttlvolve"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnpagartarjeta"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>